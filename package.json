{
  "name": "cri-story-map",
  "version": "1.0.0",
  "description": "A story map of Cooperative Recovery Initiative projects",
  "main": "app.js",
  "browserify": {
    "transform": [
      "jadeify"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "jsonmin": "json-minify app/data/projects.geojson > dist/data/projects.js",
    "watch:json": "watch 'npm run jsonmin' app/data",
    "browserify": "browserify app/js/app.js | uglifyjs -mc > dist/js/bundle.js",
    "watchify": "watchify app/js/app.js -o dist/js/bundle.js -dv",
    "watch:sass": "node-sass -w app/scss/main.scss dist/css/main.css",
    "build:sass": "node-sass --output-style compressed app/scss/main.scss dist/css/main.css",
    "preimagemin": "rimraf dist/images/*",
    "imagemin": "imagemin app/images/*.png dist/images/ -p & node build/resize-images && node build/shrink-svg",
    "htmlmin": "htmlmin -o dist/index.html app/index.html",
    "watch:img": "watch 'npm run imagemin' app/images",
    "serve": "browser-sync start --server dist --files 'dist/**/*'",
    "optimize": "npm run htmlmin & npm run imagemin",
    "fonts": "ncp app/fonts/ dist/fonts/",
    "build": "npm run fonts & npm run optimize & npm run build:sass & npm run browserify",
    "prestart": "rimraf dist && node build/create-dist && npm run build:sass && npm run fonts && npm run jsonmin",
    "start": "npm run optimize & npm run watch:img & npm run watch:sass & npm run watchify & npm run watch:json & npm run serve",
    "inspect": "browserify --full-paths app/js/app.js | uglifyjs -mc | Discify --open",
    "publish": "npm run build && gh-pages -d dist"
  },
  "keywords": [
    "Story Map",
    "SECAS",
    "Southeast Conservation Adaptation Strategy",
    "USFWS",
    "Landscape Conservation Cooperative",
    "LCC"
  ],
  "author": "Roy Hewitt <roy_hewitt@fws.gov>",
  "license": "SAX-PD",
  "devDependencies": {
    "browser-sync": "^2.11.1",
    "browserify": "^13.0.0",
    "csv2geojson": "^4.0.0",
    "disc": "^1.3.2",
    "gh-pages": "^0.8.0",
    "html-minifier-cli": "^0.1.0",
    "imagemin": "^4.0.0",
    "imagemin-cli": "^2.1.0",
    "imagemin-svgo": "^4.2.0",
    "jade": "^1.11.0",
    "jadeify": "^4.6.0",
    "json-minify": "^1.0.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.4.2",
    "npm-check-updates": "^2.5.7",
    "pug": "^2.0.0-beta3",
    "rimraf": "^2.5.1",
    "sharp": "^0.12.2",
    "uglifyjs": "^2.4.10",
    "watch": "^0.17.1",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "classlist-polyfill": "^1.0.2",
    "events": "^1.1.0",
    "install": "^0.8.1",
    "leaflet": "^1.0.0-rc.1",
    "leaflet.markercluster": "^1.0.0-rc.1.0",
    "lodash.clone": "^4.3.2",
    "lodash.defaults": "^4.0.0",
    "lodash.find": "^4.0.1",
    "lodash.intersection": "^4.2.0",
    "lodash.sample": "^4.1.1",
    "lodash.union": "^4.4.0",
    "npm": "^3.10.2",
    "underscore.string": "^3.2.3",
    "xhr": "^2.2.0"
  }
}
